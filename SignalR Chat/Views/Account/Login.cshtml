@model VmRegister

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-lg-12">
            <form class="user" asp-controller="account" asp-action="login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="email" asp-for="@Model.Email" class="form-control form-control-user" placeholder="Email">
                    <span asp-validation-for="@Model.Email"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.Password" class="form-control form-control-user" placeholder="Password">
                    <span asp-validation-for="@Model.Password"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Login
                </button>
            </form>
        </div>

    </div>

</div>